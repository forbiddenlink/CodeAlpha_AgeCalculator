{
  "name": "codealpha-agecalculator",
  "version": "1.1.0",
  "type": "module",
  "description": "A modern, accessible age calculator with advanced features including planetary ages, statistics, and user preferences",
  "keywords": ["age calculator", "date calculator", "birthday", "pwa", "accessible"],
  "author": "Elizabeth Stein",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 4567 --open",
    "build": "node build.js",
    "build:vite": "vite build",
    "build:production": "vite build --config vite.config.production.js",
    "build:dev": "vite build",
    "preview": "vite preview --port 4567 --open",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "analyze": "vite build --config vite.config.production.js && npx vite-bundle-analyzer dist",
    "lighthouse": "lighthouse http://localhost:4567 --output=html --output-path=./lighthouse-report.html",
    "clean": "rimraf dist",
    "precommit": "npm run lint && npm run test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0",
    "vite": "^7.1.1",
    "vite-bundle-analyzer": "^0.10.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ]
}
